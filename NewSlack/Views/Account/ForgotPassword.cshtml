@model Slack.Models.ViewModels.ForgotPasswordModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewBag.Title = "Slack - Forgot password";
}
<html>
<head>
    @section links{
        <link rel="stylesheet" href="~/Content/Styles/Account/Login/login.css" />
        <link rel="stylesheet" href="~/Content/Styles/Account/ForgotPassword/forgot_pass.css" />
    }
</head>
<body class="bg-light">
    <div class="container">
        <form action="/forgot-password" method="post" autocomplete="off">
            @Html.AntiForgeryToken()

            <div class="form-horizontal col-10 col-sm-12 col-md-12">
                <h4 class="text-center text-uppercase">skavee / recovery</h4>
                <hr />
                <h5 class="small text-center" style="font-family: 'Tajawal Regular', sans-serif;">We will just send instructions on resetting the password to your email</h5>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="mx-auto col-md-9 col-sm-9">
                        @Html.EditorFor(model => model.Email, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control text-dark focus-border-herbal",
                                placeholder = "Enter Email"
                            }
                        })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="mx-auto text-center col-md-9 col-sm-9 mt-4">
                        <input type="submit" value="Reset" class="btn focus-border-herbal d-block mx-auto" />
                        <a href="/login" class="text-uppercase d-inline-block mx-auto mt-2 small text-dark">login</a>
                        <span class="text-uppercase small">or</span>
                        <a href="/register" class="text-uppercase d-inline-block mx-auto mt-2 small text-dark">register</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>