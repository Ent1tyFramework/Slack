@model Slack.Models.ViewModels.ForgotPasswordModel

@{
    Layout = null;
    ViewBag.Title = "Slack - Password recovery";
}

<html>
<head>
    <link rel="stylesheet" href="~/Content/Styles/Common/reset.css" />
    <link rel="stylesheet" href="~/Content/Styles/Layout/fonts.css">
    <link rel="stylesheet" href="~/Content/Styles/Account/ForgotPassword/forgot_pass.css" />
</head>
<body>
    <section id="body">
        <div class="content">
            <h1 id="title">Password recovery</h1>
            <form action="/forgot-password" method="post" autocomplete="off">
                @Html.AntiForgeryToken()

                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeholder = "Please, enter your email" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { })

                @Html.ValidationSummary(true, "")
                <input type="submit" value="Send me reset password instructions">
            </form>
            <div class="more_actions">
                <a href="/login">Log in</a>
                <a href="/register">Register</a>
            </div>
        </div>
    </section>
</body>
</html>
