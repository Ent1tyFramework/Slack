@{
    ViewBag.Title = "Slack - News";
    ViewBag.Page = "News";
}
<html>
<head>
    @section links{
        <link rel="stylesheet" href="~/Content/Styles/Home/News/news.css" />
    }
    @section scripts{
        <script src="~/Scripts/Hubs/posthub.js"></script>
        <script src="~/Scripts/Home/Posts/posts_load.js"></script>
        <script src="~/Scripts/Home/Posts/post_upload.js"></script>
        <script>
            $(function () {
                $('div.posts').empty();
                only = false;
                data_loading();
            });
        </script>
    }
</head>
<body>
    <section id="posts">
        <div class="container">
            <div class="add_post">
                <div class="container1">
                    <input id="img_upload" name="upload" type="file" accept="image/jpg, image/png" hidden>
                    <div class="upload clearfix">
                        <img class="left" src="/Content/Images/blue_upload.png" alt="">
                        <h4 class="left">Upload photo</h4>
                    </div>
                </div>
                <div class="container2" hidden>
                    <img src="" alt="">
                </div>
                <div class="container3" hidden>Publish</div>
            </div>
            <div class="posts">
                <!--render posts from cache-->
                @{Html.RenderAction("Posts", "Home", new { skip = 0, take = 10, only = false, fromCache = true });}
            </div>
        </div>
    </section>
</body>
</html>